#!/usr/bin/env ruby
# encoding: utf-8

require 'pttcrawler'

if ARGV.size != 3 then
  print("ruby pttcrawler [usr] [pwd] [board]\n")
  exit(0)
end

USR               = ARGV[0]
PWD               = ARGV[1]
TARGET_BOARD      = ARGV[2] 

crawler = Pttcrawler::Crawler.new(USR, PWD, log_level:Pttcrawler::PTT_DEBUG) 
crawler.login do
  crawler.get_today_article_list(TARGET_BOARD)
end
